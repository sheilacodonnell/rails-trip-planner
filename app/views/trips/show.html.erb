<h2><%= @trip.city %></h2>
<p> <%= @trip.start_date %> </p>
<p> <%= @trip.end_date %> </p>
<p> <%= @trip.notes %> </p>
<p> Created by: <%= @trip.user&.email %> </p>

<% if @trip.user == current_user %>

  <%= link_to 'Edit', edit_trip_path(@trip), class: 'btn btn-success' %>
  <%= link_to 'Back', trips_path, class: 'btn btn-primary' %>
  <%= link_to 'Delete', trip_path(@trip), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>

<% else %>
  <%= link_to 'Back', trips_path, class: 'btn btn-primary' %>

<%end%>
